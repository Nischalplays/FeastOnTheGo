    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build GTK Program",
            "type": "shell",
            "command": "C:/msys64/ucrt64/bin/gcc.exe",
            "args": [
                "-o",
                "${workspaceFolder}/bin/main.exe",
                "main.c",
                "$(pkg-config --cflags --libs gtk+-3.0)",  // Corrected the way pkg-config is called
                "-I",
                "${workspaceFolder}/includes",
                "-L",
                "${workspaceFolder}/libs"
